@model SorteadorCore.Web.ViewModel.UsuarioViewModel

@{
    ViewData["Title"] = "View";
}

<h2 class="mdc-typography--headline4">Login</h2>
<hr />
<center>
    <form asp-action="LoginPage">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mdc-text-field" data-mdc-auto-init="MDCTextField">
            <label asp-for="Username" class="mdc-floating-label"></label>
            <input asp-for="Username" class="mdc-text-field__input" />
            <span asp-validation-for="Username" class="mdc-theme--text-hint-on-light"></span>
        </div><br />
        <div class="mdc-text-field" data-mdc-auto-init="MDCTextField">
            <label asp-for="Password" class="mdc-floating-label"></label>
            <input type="password" asp-for="Password" class="mdc-text-field__input" />
            <span asp-validation-for="Password" class="mdc-theme--text-hint-on-light"></span>
        </div>
        <div>
            <input type="submit" value="Login" class="mdc-button mdc-button--raised" />
        </div>
    </form>
</center>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
