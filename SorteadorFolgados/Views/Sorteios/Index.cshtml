<div class="mdc-layout-grid">
    <div class="mdc-layout-grid__inner">
        <div class="mdc-layout-grid__cell--span-1"></div>
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-7">
            <div class="mdc-layout-grid__inner">
                <div class="mdc-layout-grid__cell--span-6">
                    <span id="nomeSorteio" class="mdc-typography--headline4"></span><br />
                    <span id="datasSorteio" class="mdc-typography--headline6"></span>
                    <br />
                    <button class="mdc-button" onclick="document.location.reload(true)"><span class="mdc-button__ripple"></span>Atualizar Resultados</button>
                </div>
                <div class="mdc-layout-grid__cell--span-6 mdc-layout-grid__cell--align-bottom">
                    <div class="mdc-text-field" data-mdc-auto-init="MDCTextField">
                        <input id="nomeParticipante" required maxlength="150" class="mdc-text-field__input" />
                        <div class="mdc-line-ripple"></div>
                        <label class="mdc-floating-label" for="nomeParticipante">Nome/Nickname</label>
                    </div>
                    <button class="mdc-button mdc-button--raised" onclick="sortearClick()">
                        <div class="mdc-button__ripple"></div>
                        <span class="mdc-button__label">Sortear</span>
                    </button>
                </div>
            </div>
            <div class="mdc-data-table mdc-data-table">
                <table id="Participacoes" class="mdc-data-table__table" aria-label="Participações" >
                    <thead>
                        <tr class="mdc-data-table__header-row">
                            <th class="mdc-data-table__header-cell mdc-data-table__header-cell--numeric" role="columnheader" scope="col">Pontos</th>
                            <th width="300px" class="mdc-data-table__header-cell" role="columnheader" scope="col">Nome</th>
                            <th class="mdc-data-table__header-cell" role="columnheader" scope="col">IP</th>
                            <th class="mdc-data-table__header-cell" role="columnheader" scope="col">Data e Hora</th>
                        </tr>
                    </thead>
                    <tbody class="mdc-data-table__content">
                    </tbody>
                </table>
            </div>
        </div>
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-3">
            <div class="mdc-card">
            </div>
        </div>
        <div class="mdc-layout-grid__cell--span-1"></div>
    </div>
</div>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/sorteios.js"></script>
